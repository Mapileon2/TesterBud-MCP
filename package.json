{
  "name": "TesterBud",
  "version": "1.0.0",
  "description": "Universal Context-7 MCP Server with Dynamic Reasoning for Any LLM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "mcp": "node dist/mcp-server.js",
    "mcp:dev": "ts-node src/mcp-server.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t context7-mcp .",
    "docker:run": "docker run -p 8000:8000 --env-file .env context7-mcp",
    "deploy:render": "./deploy/render-deploy.sh",
    "deploy:gcp": "./deploy/gcp-deploy.sh"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "rate-limiter-flexible": "^7.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "llm",
    "debugging",
    "context",
    "reasoning",
    "ai",
    "universal"
  ],
  "author": "Context-7 Team",
  "license": "MIT"
}
